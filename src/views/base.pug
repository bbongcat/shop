doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle
            nav
                ul
                    li
                        a(href="/") Home
                    if loggedIn
                        li
                            a(href="/logout") Logout
                        li
                            a(href="/user/my-profile") #{loggedInUser.name}Ïùò Profile
                        li
                            a(href="/user/cart") Cart
                        li
                            a(href="/product/upload") Upload
                    else
                        li
                            a(href="/login") Login
                        li
                            a(href="/join") Join


        main
            block content
    include partials/footer